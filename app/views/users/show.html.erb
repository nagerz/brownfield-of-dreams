<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>

  <section class="bookmarked-segments">
    <h1>Bookmarked Segments</h1>
    <% facade.user_bookmarked_videos.each do |bookmark| %>
      <article class="bookmarked-tutorial">
        <p><%= bookmark.video.tutorial.title %></p>
        <ul>
          <li class="bookmarked-video">
            <%= link_to bookmark.video.title, tutorial_video_path(bookmark.video.tutorial_id, bookmark.video.id) %>
          </li>
        </ul>
      </article>
    <% end %>
  </section>

  <% if current_user.github_token %>
    <section class='github'>
      <h1>Github</h1>
      <section class="repositories"
        <h3>My Repositiories:</h3>
        <ul>
          <% facade.top_user_repos(5).each do |repo|  %>
            <li class = 'user_repo'>
            <%= link_to repo.name, repo.address, class: 'name' %> </li>
          <% end %>
        </ul>
      </section>
      <section class="followers"
        <h3>My Followers:</h3>
        <ul>
          <% facade.user_followers.each do |follower|  %>
            <li class="user_follower">
            <%= link_to follower.name, follower.address, class: 'name' %> </li>
          <% end %>
        </ul>
      </section>
      <section class='users_followed'>
        <h3>Following</h3>
        <ul>
          <% facade.users_followed.each do |user_followed| %>
            <li class = 'following'>
            <%= link_to user_followed.name, user_followed.address, class:'handle' %> </li>
          <% end  %>
        </ul>
      </section>

    </section>
  <% end %>
</section>
